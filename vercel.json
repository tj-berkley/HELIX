{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_GEMINI_API_KEY": "@vite_gemini_api_key",
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@vite_stripe_publishable_key",
    "VITE_GOOGLE_PLACES_API_KEY": "@vite_google_places_api_key",
    "VITE_GOOGLE_MAPS_API_KEY": "@vite_google_maps_api_key",
    "VITE_FACEBOOK_ACCESS_TOKEN": "@vite_facebook_access_token",
    "VITE_LINKEDIN_CLIENT_ID": "@vite_linkedin_client_id",
    "VITE_LINKEDIN_ACCESS_TOKEN": "@vite_linkedin_access_token"
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
